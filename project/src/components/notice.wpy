<template>
    <view id="notice" class="{{noticeshow?'popup-show':''}}">
        <image src="{{noticemess.avatarUrl ? noticemess.avatarUrl: baseHeadImg}}" mode="aspectFill" />{{noticemess.nickName}} {{noticemess.message}}
    </view>
</template>

<script>
    import wepy from 'wepy'
    import Mixin from '@/mixins/global'
    export default class Notice extends wepy.component {
        config = {}
        components = {}
        props = {
            goods_id: {
                type: String,
                default: ''
            }
        }
        mixins = [Mixin]
        data = {
            noticeshow: false,
            noticemess: '',
            messageTimer:null
        }
        methods = {
            getNotice() {
                this.messageTimer = setInterval(() => {
                    console.log('2')
                    this.getNoticedata()
                }, 30000)
            },
            //30秒
            clearTimerMeth(){
                // this.messageTimer = null
                clearInterval(this.messageTimer)
                console.log('ee',this.messageTimer)
            }
        }
        // 取首页通知
        getNoticedata() {
            wepy.request({
                url: 'api/message/getmessage',
                method: 'POST',
                data: {
                    goods_id: this.goods_id
                }
            }).then(res => {
                if (res.code == 1) {
                    this.noticeshow = true
                    this.noticemess = res.data
                    this.$apply()
                    this.closemessage()
                }
            })
        }
        closemessage() {
            setTimeout(() => {
                this.noticeshow = false
                this.$apply()
            }, 3000);
        }
        clearTime(){
            // this.messageTimer = null
            clearInterval(this.messageTimer)
        }
        onLoad() {
            // this.clearTime()
            
        }
    }
</script>
