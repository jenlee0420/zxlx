    #notice {
        height: 50rpx;
        font-size: 18rpx;
        color: #fff;
        display: flex;
        align-items: center;
        position: fixed;
        left: -200rpx;
        top: 30rpx;
        background-color: rgba(0, 0, 0, .5);
        border-radius: 10rpx;
        min-width: 200rpx;
        padding: 0 19rpx;
        opacity: 0;
        visibility: hidden;
        transform-origin: center;
        transition: all 0.4s ease;
        transform: translate3d(0rpx, 0rpx, 0rpx);
        image {
            width: 38rpx;
            height: 38rpx;
            border-radius: 50%;
            margin-right: 10rpx;
        }
        &.popup-show {
            visibility: visible;
            opacity: 1;
